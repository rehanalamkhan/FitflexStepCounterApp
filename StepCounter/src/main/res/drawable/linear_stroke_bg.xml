<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape (the gradient border itself) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#FF7253"
                android:startColor="#EF3511"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Inner shape (the solid background) -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
